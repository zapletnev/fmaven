<component-set>
	<components>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>pod</role-hint>
			<implementation>
				org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
			</implementation>
			<configuration>
				<phases>
					<generate-resources>
						com.xored:fmaven-plugin:resources
					</generate-resources>
					<compile>
						com.xored:fmaven-plugin:compile
					</compile>
					<package>
						com.xored:fmaven-plugin:package
					</package>
					<test>
						com.xored:fmaven-plugin:test
					</test>
					<install>
						org.apache.maven.plugins:maven-install-plugin:install
					</install>
					<deploy>
						org.apache.maven.plugins:maven-deploy-plugin:deploy
					</deploy>
				</phases>
			</configuration>
		</component>
		<component>
      		<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      		<role-hint>pod</role-hint>
   			<implementation>
     			org.apache.maven.artifact.handler.DefaultArtifactHandler
   			</implementation>
   			<configuration>
     			<type>pod</type>
     			<extension>pod</extension>
     			<language>fantom</language>
   			</configuration>
	    </component>
	</components>
</component-set>